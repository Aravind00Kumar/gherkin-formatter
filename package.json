{
  "name": "gherkin-formatter",
  "displayName": "Gherkin Formatter",
  "description": "Syntax formatter for gherkin language (cucumberjs) .feature files",
  "version": "0.0.1",
  "publisher": "Aravind",
  "engines": {
    "vscode": "^1.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:gherkin-formatter.format"
  ],
  "main": "./src/extension",
  "contributes": {
    "commands": [
      {
        "command": "gherkin-formatter.format",
        "title": "format gherkin"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "tmp": "0.0.28"
  }
}
